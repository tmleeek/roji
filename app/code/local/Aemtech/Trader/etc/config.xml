<?xml version="1.0"?>
<config>
    <modules>
        <Aemtech_Trader>
            <version>0.1.4</version>
        </Aemtech_Trader>
    </modules>
    <frontend>
        <routers>			
            <customer>
                <args>
                    <modules>
                        <Aemtech_Trader before="Mage_Customer">Aemtech_Trader_Customer</Aemtech_Trader>
                    </modules>
                </args>
            </customer>  
            <trader>
                <use>standard</use>
                <args>
                    <module>Aemtech_Trader</module>
                    <frontName>trader</frontName>
                </args>
            </trader>   
        </routers>
        <layout>
            <updates>
                <trader>
                    <file>trader.xml</file>
                </trader>
            </updates>
        </layout>
        <theme>gryphon</theme>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Aemtech_Trader before="Mage_Adminhtml">Aemtech_Trader_Adminhtml</Aemtech_Trader>
                    </modules>
                </args>
            </adminhtml> 
        </routers> 
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all> 
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <aemtech>
                                            <title>Aemtech - All</title>
                                        </aemtech>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources> 
        </acl>
        <layout>
            <updates>
                <trader>
                    <file>trader.xml</file>
                </trader>
            </updates>
        </layout>
    </adminhtml>
    <global> 
        <models>
            <trader>
                <class>Aemtech_Trader_Model</class>
                <resourceModel>trader_mysql4</resourceModel>
            </trader>
            <trader_mysql4>
                <class>Aemtech_Trader_Model_Mysql4</class>
                <entities>
                    <trader>
                        <table>trader</table>
                    </trader>
                </entities>
            </trader_mysql4>
            <customer>
                <rewrite>
                    <customer>Aemtech_Trader_Model_Customer</customer>
                </rewrite>
            </customer>			
        </models>
        <resources>
            <trader_setup>
                <setup>
                    <module>Aemtech_Trader</module>
                    <!--<class>Mage_Customer_Model_Entity_Setup</class>-->
					<class>Mage_Sales_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </trader_setup>
            <trader_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </trader_write>
            <trader_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </trader_read>
        </resources>
        <blocks>
            <trader>
                <class>Aemtech_Trader_Block</class>
            </trader>
            <customer_trader>
                <class>Aemtech_Trader_Block_Customer_Trader</class>
            </customer_trader>
            <adminhtml>
                <rewrite>
                    <catalog_category_tabs>Aemtech_Trader_Block_Catalog_Category_Tabs</catalog_category_tabs>
                    <customer_edit>Aemtech_Trader_Block_Adminhtml_Customer_Edit</customer_edit>
                    <customer_edit_tabs>Aemtech_Trader_Block_Adminhtml_Customer_Edit_Tabs</customer_edit_tabs>
                    <customer_edit_tab_view>Aemtech_Trader_Block_Adminhtml_Customer_Edit_Tab_View</customer_edit_tab_view>
                    <customer_edit_tab_view_wishlist>Aemtech_Trader_Block_Adminhtml_Customer_Edit_Tab_View_Wishlist</customer_edit_tab_view_wishlist>
                    <customer_edit_tab_view_cart>Aemtech_Trader_Block_Adminhtml_Customer_Edit_Tab_View_Cart</customer_edit_tab_view_cart>
                    <customer_edit_tab_addresses>Aemtech_Trader_Block_Adminhtml_Customer_Edit_Tab_Addresses</customer_edit_tab_addresses>
                    <customer_edit_tab_account>Aemtech_Trader_Block_Adminhtml_Customer_Edit_Tab_Account</customer_edit_tab_account>
                    <customer_grid>Aemtech_Trader_Block_Adminhtml_Customer_Grid</customer_grid>
                </rewrite>
            </adminhtml>
            <Aemtech_Trader_adminhtml>
                <class>Aemtech_Trader_Block_Adminhtml</class>
            </Aemtech_Trader_adminhtml>
            <customer>
                <rewrite>
                    <form_register>Aemtech_Trader_Block_Customer_Form_Register</form_register> 
                </rewrite>
            </customer> 
        </blocks>
        <helpers>
            <trader>
                <class>Aemtech_Trader_Helper</class>
            </trader>
        </helpers>		
        <events>		  
            <adminhtml_customer_prepare_save>
                <observers> 
                    <trader>
                        <type>singleton</type>
                        <class>trader/Observer</class>
                        <method>customerSaveBefore</method>
                    </trader>
                </observers>
            </adminhtml_customer_prepare_save>
            <adminhtml_customer_save_after>
                <observers> 
                    <trader>
                        <type>singleton</type>
                        <class>trader/Observer</class>
                        <method>customerSaveAfter</method>
                    </trader>
                </observers>
            </adminhtml_customer_save_after>
           <!-- <catalog_category_save_commit_after>
                <observers>
                    <category_category_observer>
                        <type>singleton</type>
                        <class>Aemtech_Trader_Model_Observer</class>
                        <method>saveCategoryData</method>
                    </category_category_observer> 
                </observers>
            </catalog_category_save_commit_after> -->
			<checkout_type_onepage_save_order>
				<observers>
					<traderselfcollect_observer>
						<type>singleton</type>
						<class>trader/observer</class>
						<method>saveTraderSelfCollect</method>
					</traderselfcollect_observer>
				</observers>
			</checkout_type_onepage_save_order>
			<sales_quote_save_before> 
				<observers>
				   <save_before>
						<type>singleton</type>
						<class>trader/observer</class> 
						<method>saveQuoteBefore</method> 
				  </save_before>
				</observers>
			</sales_quote_save_before>
			<sales_quote_save_after>
				<observers>
					<trader_observer>
						<type>singleton</type>
						<class>trader/observer</class>
						<method>saveQuoteAfter</method>
					</trader_observer>
				</observers>
			</sales_quote_save_after>
			<sales_quote_load_after> 
                <observers>
                    <load_after>
                            <type>singleton</type>
                            <class>trader/observer</class> 
                            <method>loadQuoteAfter</method> 
                     </load_after>
                 </observers>
			</sales_quote_load_after>
			<checkout_controller_onepage_save_shipping_method>
				<observers>
					<trader_shipping_method>
						<type>singleton</type>
						<class>trader/observer</class>
						<method>saveTraderSelfCollectToQuote</method>
					</trader_shipping_method>
				</observers>
			</checkout_controller_onepage_save_shipping_method>
			<controller_action_predispatch>
				<observers>
					<controller_action_before>
						<class>trader/observer</class>
						<method>hookToControllerActionPreDispatch</method>
					</controller_action_before>
				</observers>
			</controller_action_predispatch>
			<customer_login>
               <observers>
                   <loginredirect>
                       <class>trader/observer</class>
                       <method>setRedirectOnLogin</method>
                   </loginredirect>
               </observers>
           </customer_login>
        </events> 
        <fieldsets>
            <customer_account> 
                <isactivated>
                    <create>1</create>
                    <update>1</update>
                </isactivated>
            </customer_account>
			<sales_convert_quote>
			   <traderselfcollect><to_order>*</to_order></traderselfcollect>
			</sales_convert_quote>
			<sales_convert_order>
			   <traderselfcollect><to_quote>*</to_quote></traderselfcollect>
			</sales_convert_order>
        </fieldsets> 
        <template>
            <email>
                <trader_trader_account_email_template translate="label" module="trader">
                    <label>New trader register</label>
                    <file>trader_account_new.html</file>
                    <type>html</type>
                </trader_trader_account_email_template> 
                <trader_trader_account_activated_email_template translate="label" module="trader">
                    <label>New trader activated</label>
                    <file>trader_account_verified.html</file>
                    <type>html</type>
                </trader_trader_account_activated_email_template>
				<notification_for_new_customer>
					<label>Template for notify new customer to Administrator</label>
					<file>notification_for_new_customer.html</file>
					<type>html</type>
				</notification_for_new_customer>
            </email>
        </template>		
    </global>
    <default> 
        <captcha  translate="label"> 
            <frontend>
                <areas>
                    <trader_register>
                        <label>Trader Register</label>
                    </trader_register>
                </areas>
            </frontend>
        </captcha>
    </default>
</config>